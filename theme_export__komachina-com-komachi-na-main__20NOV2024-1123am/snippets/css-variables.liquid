{%- liquid
  case settings.type_body_font_jp
  when 'notosans'
    assign jp_body = '"Noto Sans JP"'
  when 'yugochic'
    assign jp_body = 'YuGothic, "Yu Gothic"'
  when 'notoserif'
    assign jp_body = '"Noto Serif JP"'
  when 'yumincho'
    assign jp_body = 'YuMincho, "Yu Mincho"'
  endcase
-%}

{%- liquid
  case settings.type_header_font_jp
  when 'notosans'
    assign jp_header = '"Noto Sans JP"'
  when 'yugochic'
    assign jp_header = 'YuGothic, "Yu Gothic"'
  when 'notoserif'
    assign jp_header = '"Noto Serif JP"'
  when 'yumincho'
    assign jp_header = 'YuMincho, "Yu Mincho"'
  endcase
-%}

{%- style -%}
  :root {
    --typeHeaderPrimary: {{ settings.type_header_font_family.family }},{{ jp_header }};
    --typeHeaderFallback: {{ settings.type_header_font_family.fallback_families }};
    --typeHeaderSize: {{ settings.type_header_base_size | default: '32' | append: 'px' }};
    --typeHeaderWeight: {{ settings.type_header_font_family.weight }};
    --typeHeaderLineHeight: {{ settings.type_header_line_height | default: 1.4 }};
    --typeHeaderSpacing: {{ settings.type_header_spacing | default: '25' | divided_by: 1000.00 | append: 'em' }};

    --typeBasePrimary:{{ settings.type_base_font_family.family }},{{ jp_body }};
    --typeBaseFallback:{{ settings.type_base_font_family.fallback_families }};
    --typeBaseSize: {{ settings.type_base_size | default: 16 | append: 'px' }};
    --typeBaseWeight: {{ settings.type_base_font_family.weight }};
    --typeBaseSpacing: {{ settings.type_base_spacing | default: '50' | divided_by: 1000.00 | append: 'em' }};
    --typeBaseLineHeight: {{ settings.type_base_line_height | default: 1.4 }};

    --typeBoldPrimary:{{ settings.type_bold_font_family.family }},{{ jp_body }};
    --typeBoldWeight: {{ settings.type_bold_font_family.weight }};

    --colorImageOverlayRGB:{{ settings.color_image_overlay.red }}, {{ settings.color_image_overlay.green }}, {{ settings.color_image_overlay.blue }};

    --typeProductGridTitle: {{ settings.type_product_size | append: 'px' }};
    --typeCollectionGridTitle: {{ settings.type_collection_size | append: 'px' }};

    --iconWeight: {{ settings.icon_weight | default: '5px' }};
    --iconLinecaps: {{ settings.icon_linecaps | default: 'miter' }};

    {% if settings.button_style == 'round-slight' %}
      --buttonRadius: 3px;
    {% elsif settings.button_style == 'round' %}
      --buttonRadius: 50px;
    {% else %}
      --buttonRadius: 0px;
    {% endif %}

    --colorGridOverlayOpacity: {{ settings.collection_grid_opacity | divided_by: 100.0 }};
  }

  .placeholder-content {
    background-image: linear-gradient(100deg, {{ settings.color_small_image_bg }} 40%, {{ settings.color_small_image_bg | color_darken: 3 }} 63%, {{ settings.color_small_image_bg }} 79%);
  }

  @media only screen and (min-width:1280px){
    :root {
      --typeHeaderSize: {{ settings.type_header_base_size | times : 1.1 | append: 'px' }};
      --typeBaseSize: {{ settings.type_base_size | times : 1.1 | append: 'px' }};
      --typeProductGridTitle: {{ settings.type_product_size | times : 1.1 | append: 'px' }};
      --typeCollectionGridTitle: {{ settings.type_collection_size | times : 1.1 | append: 'px' }};
    }
  }
{%- endstyle -%}
